{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lemonade-stand/tsconfig",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": "./src",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}